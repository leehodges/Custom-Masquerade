<!DOCTYPE html>
<html>
  <head>
    <title>Dummy</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <% if signed_in? %>
      <h1 class='current_user'><%= current_user.email %></h1>

      <% if user_masquerade? %>
        <%= link_to "Back masquerade", back_masquerade_path(current_user) %>
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>
